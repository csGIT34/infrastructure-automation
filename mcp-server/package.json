{
  "name": "infrastructure-mcp-app",
  "version": "2.0.0",
  "description": "MCP app for AI-powered infrastructure generation with interactive UI",
  "type": "module",
  "main": "dist/server.js",
  "bin": {
    "infrastructure-mcp": "./dist/server.js"
  },
  "scripts": {
    "build": "tsc && npm run build:ui && npm run build:copy",
    "build:ui": "vite build",
    "build:copy": "node -e \"require('fs').copyFileSync('src/patterns.generated.json','dist/patterns.generated.json')\"",
    "start": "node dist/server.js",
    "start:stdio": "cross-env MCP_TRANSPORT=stdio node dist/server.js",
    "dev": "npm run build && npm run start",
    "dev:stdio": "npm run build && npm run start:stdio"
  },
  "keywords": [
    "mcp",
    "infrastructure",
    "terraform",
    "azure"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "glob": "^10.3.10",
    "yaml": "^2.3.4",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@modelcontextprotocol/ext-apps": "^1.0.1",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "cross-env": "^10.1.0",
    "typescript": "^5.3.0",
    "vite": "^7.3.1",
    "vite-plugin-singlefile": "^2.3.0"
  }
}
